---
import CalendarTugas from "$lib/components/calendar-tugas.svelte";
import DefaultLayout from "$lib/layouts/default-layout.astro";
import type { ListBatasWaktuTugas } from "$lib/types";

import { getCollection } from "astro:content";

const allBatasWaktuTugas: ListBatasWaktuTugas = (
  await getCollection("tugas")
).map(({ slug, data }) => [slug, data["batas-waktu"]]);
---

<DefaultLayout
  title="Calendar Tugas"
  breadcrumbs={[{ label: "calendar" }]}
  class="flex items-center justify-center"
>
  <CalendarTugas client:load {allBatasWaktuTugas} />
</DefaultLayout>
