---
import PageTugasActions from "$lib/components/page-tugas-actions.svelte";
import PageTugasHeading from "$lib/components/page-tugas-heading.svelte";

import { Separator } from "$lib/components/ui/separator";
import DefaultLayout from "$lib/layouts/default-layout.astro";
import type { Tugas } from "$lib/types";

import { getEntry } from "astro:content";

const { mata_kuliah, tugas } = Astro.params;
if (mata_kuliah === undefined || tugas === undefined)
  throw new Error("link tidak valid");

const entry = await getEntry("tugas", `${mata_kuliah}/${tugas}`);
if (entry === undefined) throw new Error("tugas tidak ditemukan!");

const data: Tugas = { ...entry.data, id: entry.slug };
const { Content } = await entry.render();
---

<DefaultLayout
  title={data.judul}
  description={entry.body}
  breadcrumbs={[
    { label: mata_kuliah, href: `/tugas/${mata_kuliah}` },
    { label: tugas },
  ]}
>
  <h2
    class="scroll-m-20 pb-2 text-3xl text-center sm:text-start font-semibold tracking-tight transition-colors first:mt-0"
  >
    {data.judul}
  </h2>
  <PageTugasHeading client:load {data} />

  <Separator class="my-4" />

  <PageTugasActions client:load {data} />

  <Separator class="my-4" />

  <div class="content">
    <Content />
  </div>
</DefaultLayout>

<style is:global>
  .content h2 {
    @apply scroll-m-20 border-b pb-2 text-3xl font-semibold tracking-tight mt-8 first:mt-0;
  }

  .content h3 {
    @apply scroll-m-20 text-2xl font-semibold tracking-tight;
  }

  .content p {
    @apply leading-7 [&:not(:first-child)]:mt-6;
  }

  .content a {
    @apply text-indigo-700 underline break-all;
  }

  .content blockquote {
    @apply mt-6 border-l-2 pl-6 italic;
  }

  .content img {
    @apply p-2 mx-auto border shadow-sm;
  }

  .content :is(ol, ul) {
    @apply my-4 ml-6 [&>li]:mt-2;
  }

  .content ol {
    list-style: decimal;
  }

  .content ul {
    list-style-type: disc;
  }

  .content table {
    @apply w-full caption-bottom text-sm;
  }

  .content thead {
    @apply [&_tr]:border-b;
  }

  .content tr {
    @apply hover:bg-muted/50 data-[state=selected]:bg-muted border-b transition-colors;
  }

  .content th {
    @apply text-muted-foreground h-12 px-4 text-left align-middle font-medium [&:has([role=checkbox])]:pr-0;
  }

  .content tbody {
    @apply [&_tr:last-child]:border-0;
  }

  .content td {
    @apply p-4 align-middle [&:has([role=checkbox])]:pr-0;
  }
</style>
