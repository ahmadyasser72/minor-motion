---
import PageIndexDefault from "$lib/components/page-index-default.astro";
import PageIndexLoggedIn from "$lib/components/page-index-logged-in.astro";
import DefaultLayout from "$lib/layouts/default-layout.astro";

const { login, session } = Astro.locals;
---

<DefaultLayout class="flex flex-col items-center justify-center py-8 h-[100vh]">
  {login !== undefined ? <PageIndexLoggedIn {session} /> : <PageIndexDefault />}
</DefaultLayout>
